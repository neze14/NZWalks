@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

@{
}


<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">
        Add Region
    </a>
</div>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            @* <th>RegionImageUrl</th> *@
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reg in Model)
        {
            <tr>
                <td>@reg.Id</td>
                <td>@reg.Name</td>
                <td>@reg.Code</td>
                @* <td>@reg.RegionImageUrl</td> *@
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@reg.Id" class="btn btn-light">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>